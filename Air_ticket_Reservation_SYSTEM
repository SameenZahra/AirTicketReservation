							e_seat--;

							if (e_seat <= 0)

								cout << "\n\t\t\tOoooops Sorry No Seat Availabale......" << endl;
							else
								cout << "\n\t\t\tDear Customer Seat Is Available" << endl;
							break;
						default:
							if (ch != 1 || ch != 2)
							{
								cout << "you have enterd a wrong choice" << endl;
								cout << "unfortunately program is terminated " << endl;
							}
						}
						if (ch == 1 || ch == 2)
						{
							t1.getdata();
							system("CLS");
							booking::show();
							if (ch == 1)
							{
								cout << "|                                                                         " << endl;
								cout << "|Ticket Information:                                                      " << endl;
								cout << "|BUISNESS CLASS                                                           " << endl;
