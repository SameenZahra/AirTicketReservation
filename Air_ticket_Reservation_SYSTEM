class international :public booking
{
protected:
	int b1_seat;
	int e1_seat;
	int choice;
	int c;
	int b;
	int v;
	char g;
	mytime t1;
public:
	void getdata()
	{
		b = 0;
		v = 0;
		cout << "\n\n\t\t\t******* In Which AIRLINE You Want To Travel *******" << endl << endl;
		cout << "\t\t\t1 - PIA";
		cout << "\t\t\t\t2 - AIR BLUE" << endl << endl;
		cout << "\t\t\t3 - ARAB EMIRATES";
		cout << "\t\t4 - QATAR AIRWAYS" << endl << endl;
		cout << "\t\t\t\t\tEnter Your Choice = ";
		cin >> option;
		system("cls");
		switch (option)
		{
		case 1:
			if (option == 1) {
				cout << "\n\n\n\t\t\t\tWelcome To PIA" << endl;
				cout << "\n   These Are The Local Places Available\n\n" << endl;
				cin.ignore();
				for (int i = 0; i < 10; i++)
				{
					cout << i_destination[i] << endl;
				}
				booking::getdata();
				for (int j = 0; j < 10; j++)
				{
					if (strcmp(i_destination[j], dest) == 0)
					{
						v++;
					}
				}
				for (int i = 0; i < 5; i++)
				{
					if (strcmp(l_destination[i], c_loc) == 0)
					{
						b++;
					}
				}
				if (b == 1 && v == 1)
				{
					cout << "\n\n\t\t*** Flight Available On This Route ***" << endl;
					b1_seat = 30;
					e1_seat = 40;
